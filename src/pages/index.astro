---
import Layout from '../components/Layout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import FilterBar from '../components/FilterBar.astro';
import ProjectModal from '../components/ProjectModal.astro';
import ContactSection from '../components/ContactSection.astro';
import projectsData from '../data/projects.json';
import type { ProjectData } from '../types/project';

const { projects } = projectsData as ProjectData;
---

<Layout title="Portfolio - AI Developer & Researcher">
  <Hero />
  
  <!-- Projects Section -->
  <section id="projects" class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          Projects
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Explore my work in AI, web development, and research
        </p>
      </div>
      
      <!-- Filter Bar -->
      <FilterBar projects={projects} />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
      

    </div>
  </section>
  
  <!-- About Section -->
  <section id="about" class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          About Me
        </h2>
        <p class="text-xl text-gray-600">
          Passionate about creating intelligent solutions that make a difference
        </p>
      </div>
      
      <div class="prose prose-lg mx-auto text-gray-600">
        <p>
          I'm a full-stack developer and AI researcher with a passion for building 
          intelligent applications that solve real-world problems. My work spans 
          modern web technologies, machine learning, and academic research.
        </p>
        
        <p>
          With expertise in Python, FastAPI, React, and TypeScript, I create 
          scalable applications that leverage the latest in AI and machine learning. 
          My research focuses on practical applications of artificial intelligence 
          in web development and user experience design.
        </p>
        
        <p>
          When I'm not coding, you can find me contributing to open-source projects, 
          writing technical articles, or exploring the latest developments in AI and 
          machine learning.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <ContactSection />
  
  <!-- Project Modal -->
  <ProjectModal />
</Layout>
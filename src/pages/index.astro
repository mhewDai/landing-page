---
import Layout from '../components/Layout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import FilterBar from '../components/FilterBar.astro';
import ProjectModal from '../components/ProjectModal.astro';
import projectsData from '../data/projects.json';
import type { ProjectData } from '../types/project';

const { projects } = projectsData as ProjectData;
const featuredProjects = projects.filter(project => project.featured);
---

<Layout title="Portfolio - AI Developer & Researcher">
  <Hero />
  
  <!-- Projects Section -->
  <section id="projects" class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          Projects
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Explore my work in AI, web development, and research
        </p>
      </div>
      
      <!-- Filter Bar -->
      <FilterBar projects={projects} />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
      

    </div>
  </section>
  
  <!-- About Section -->
  <section id="about" class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          About Me
        </h2>
        <p class="text-xl text-gray-600">
          Passionate about creating intelligent solutions that make a difference
        </p>
      </div>
      
      <div class="prose prose-lg mx-auto text-gray-600">
        <p>
          I'm a full-stack developer and AI researcher with a passion for building 
          intelligent applications that solve real-world problems. My work spans 
          modern web technologies, machine learning, and academic research.
        </p>
        
        <p>
          With expertise in Python, FastAPI, React, and TypeScript, I create 
          scalable applications that leverage the latest in AI and machine learning. 
          My research focuses on practical applications of artificial intelligence 
          in web development and user experience design.
        </p>
        
        <p>
          When I'm not coding, you can find me contributing to open-source projects, 
          writing technical articles, or exploring the latest developments in AI and 
          machine learning.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Let's Work Together
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        Interested in collaborating or have a project in mind? I'd love to hear from you.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="mailto:your.email@example.com"
          class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
          Send Email
        </a>
        
        <a 
          href="https://linkedin.com/in/yourusername"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors shadow-md hover:shadow-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
      </div>
    </div>
  </section>
  
  <!-- Project Modal -->
  <ProjectModal />
</Layout>
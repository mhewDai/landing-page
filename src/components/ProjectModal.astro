---
// ProjectModal component for detailed project views
---

<div id="project-modal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <!-- Background overlay -->
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    
    <!-- Modal panel -->
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full">
      <!-- Modal header -->
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <h3 class="text-2xl font-bold text-gray-900 mb-2" id="modal-title">
              <!-- Project title will be inserted here -->
            </h3>
            <div class="flex flex-wrap gap-2 mb-4" id="modal-badges">
              <!-- Project badges will be inserted here -->
            </div>
          </div>
          <button type="button" class="modal-close bg-white rounded-md text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Modal content -->
      <div class="bg-white px-4 pb-4 sm:p-6 sm:pt-0">
        <!-- Project image/screenshot -->
        <div class="mb-6">
          <img 
            id="modal-image" 
            class="w-full h-64 object-cover rounded-lg" 
            alt="Project screenshot"
          />
        </div>
        
        <!-- Project description -->
        <div class="mb-6">
          <p id="modal-description" class="text-gray-700 text-lg leading-relaxed">
            <!-- Project description will be inserted here -->
          </p>
        </div>
        
        <!-- Technology stack -->
        <div class="mb-6">
          <h4 class="text-lg font-semibold text-gray-900 mb-3">Technology Stack</h4>
          <div class="flex flex-wrap gap-2" id="modal-tech">
            <!-- Technology tags will be inserted here -->
          </div>
        </div>
        
        <!-- Screenshots gallery (if available) -->
        <div class="mb-6 hidden" id="modal-screenshots-section">
          <h4 class="text-lg font-semibold text-gray-900 mb-3">Screenshots</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4" id="modal-screenshots">
            <!-- Additional screenshots will be inserted here -->
          </div>
        </div>
        
        <!-- Project metadata -->
        <div class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
          <div>
            <span class="font-medium">Created:</span>
            <span id="modal-date"><!-- Date will be inserted here --></span>
          </div>
          <div id="modal-filesize-container" class="hidden">
            <span class="font-medium">File Size:</span>
            <span id="modal-filesize"><!-- File size will be inserted here --></span>
          </div>
        </div>
        
        <!-- Action buttons -->
        <div class="flex flex-wrap gap-3">
          <div id="modal-demo-btn" class="hidden">
            <a 
              href="#"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Live Demo
            </a>
          </div>
          
          <div id="modal-code-btn" class="hidden">
            <a 
              href="#"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View Code
            </a>
          </div>
          
          <div id="modal-pdf-btn" class="hidden">
            <a 
              href="#"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Download PDF
            </a>
          </div>
          
          <div id="modal-citation-btn" class="hidden">
            <a 
              href="#"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
              Citation
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('project-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalBadges = document.getElementById('modal-badges');
    const modalImage = document.getElementById('modal-image') as HTMLImageElement;
    const modalDescription = document.getElementById('modal-description');
    const modalTech = document.getElementById('modal-tech');
    const modalDate = document.getElementById('modal-date');
    const modalFilesize = document.getElementById('modal-filesize');
    const modalFilesizeContainer = document.getElementById('modal-filesize-container');
    const modalScreenshotsSection = document.getElementById('modal-screenshots-section');
    const modalScreenshots = document.getElementById('modal-screenshots');
    
    // Button containers
    const modalDemoBtn = document.getElementById('modal-demo-btn');
    const modalCodeBtn = document.getElementById('modal-code-btn');
    const modalPdfBtn = document.getElementById('modal-pdf-btn');
    const modalCitationBtn = document.getElementById('modal-citation-btn');
    
    // Close modal functionality
    const closeButtons = document.querySelectorAll('.modal-close');
    const overlay = modal?.querySelector('.bg-gray-500');
    
    function closeModal() {
      modal?.classList.add('hidden');
      document.body.classList.remove('overflow-hidden');
    }
    
    function openModal(projectData: any) {
      if (!modal) return;
      
      // Populate modal content
      if (modalTitle) modalTitle.textContent = projectData.title;
      if (modalDescription) modalDescription.textContent = projectData.description;
      if (modalImage) {
        modalImage.src = projectData.cover;
        modalImage.alt = `${projectData.title} screenshot`;
      }
      if (modalDate) {
        const date = new Date(projectData.dateCreated);
        modalDate.textContent = date.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        });
      }
      
      // File size
      if (projectData.fileSize && modalFilesize && modalFilesizeContainer) {
        modalFilesize.textContent = projectData.fileSize;
        modalFilesizeContainer.classList.remove('hidden');
      } else if (modalFilesizeContainer) {
        modalFilesizeContainer.classList.add('hidden');
      }
      
      // Badges
      if (modalBadges) {
        modalBadges.innerHTML = '';
        projectData.badges.forEach((badge: string) => {
          const badgeElement = document.createElement('span');
          badgeElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800';
          badgeElement.textContent = badge;
          modalBadges.appendChild(badgeElement);
        });
      }
      
      // Technology stack
      if (modalTech) {
        modalTech.innerHTML = '';
        projectData.tech.forEach((tech: string) => {
          const techElement = document.createElement('span');
          techElement.className = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800';
          techElement.textContent = tech;
          modalTech.appendChild(techElement);
        });
      }
      
      // Screenshots
      if (projectData.screenshots && projectData.screenshots.length > 0 && modalScreenshots && modalScreenshotsSection) {
        modalScreenshots.innerHTML = '';
        projectData.screenshots.forEach((screenshot: string) => {
          const imgElement = document.createElement('img');
          imgElement.src = screenshot;
          imgElement.alt = `${projectData.title} screenshot`;
          imgElement.className = 'w-full h-32 object-cover rounded-lg';
          modalScreenshots.appendChild(imgElement);
        });
        modalScreenshotsSection.classList.remove('hidden');
      } else if (modalScreenshotsSection) {
        modalScreenshotsSection.classList.add('hidden');
      }
      
      // Action buttons
      const buttons = [
        { container: modalDemoBtn, link: projectData.links.demo },
        { container: modalCodeBtn, link: projectData.links.code },
        { container: modalPdfBtn, link: projectData.links.pdf },
        { container: modalCitationBtn, link: projectData.links.citation }
      ];
      
      buttons.forEach(({ container, link }) => {
        if (container) {
          if (link) {
            const anchor = container.querySelector('a') as HTMLAnchorElement;
            if (anchor) anchor.href = link;
            container.classList.remove('hidden');
          } else {
            container.classList.add('hidden');
          }
        }
      });
      
      // Show modal
      modal.classList.remove('hidden');
      document.body.classList.add('overflow-hidden');
    }
    
    // Event listeners for closing modal
    closeButtons.forEach(button => {
      button.addEventListener('click', closeModal);
    });
    
    overlay?.addEventListener('click', closeModal);
    
    // Escape key to close modal
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
        closeModal();
      }
    });
    
    // Expose openModal function globally for project cards to use
    (window as any).openProjectModal = openModal;
  });
</script>